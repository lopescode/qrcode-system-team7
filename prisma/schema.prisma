// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Costumer {
  id    Int     @default(autoincrement()) @id
  table Int
}

model Product {
  id            Int      @default(autoincrement()) @id
  name          String
  description   String
  ingredients   String
  photo         String
  category      Category? @relation(fields: [categoryId], references: [id])
  categoryId    Int?
}

model Category {
  id            Int      @default(autoincrement()) @id
  name          String
  products      Product[]
}